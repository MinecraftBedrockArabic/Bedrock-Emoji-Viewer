{
  "name": "bedrock-emoji-viewer",
  "displayName": "Bedrock Emoji Viewer",
  "description": "Display Minecraft Bedrock custom emoji glyphs inline in your editor",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.103.0"
  },
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MinecraftBedrockArabic/Bedrock-Emoji-Viewer"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Bedrock Emoji",
      "properties": {
        "bedrockEmoji.hideSourceChar": {
          "type": "boolean",
          "default": true,
          "description": "Hide the original Unicode emoji character and only show the icon."
        }
      }
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/node": "^25.0.0"
  }
}