{
  "name": "bedrock-emoji-viewer",
  "displayName": "Bedrock Emoji Viewer",
  "description": "Display Minecraft Bedrock custom emoji glyphs inline in your editor",
  "version": "1.3.0",
  "engines": {
    "vscode": "^1.103.0"
  },
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MinecraftBedrockArabic/Bedrock-Emoji-Viewer"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "build": "vsce package",
    "pub": "vsce publish"
  },
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Bedrock Emoji",
      "properties": {
        "bedrockEmoji.hideSourceChar": {
          "type": "boolean",
          "default": true,
          "description": "Hide the original Unicode emoji character and only show the icon."
        },
        "bedrockEmoji.ignoreTransparentGlyphs": {
          "type": "boolean",
          "default": true,
          "description": "Ignores glyphs that are completely transparent during loading."
        }
      }
    },
    "commands": [
      {
        "command": "bedrockEmoji.convertToUnicode",
        "title": "Convert Hex to Unicode"
      },
      {
        "command": "bedrockEmoji.reloadGlyphs",
        "title": "Reload Bedrock Emoji Glyphs"
      }
    ],
    "keybindings": [
      {
        "command": "bedrockEmoji.convertToUnicode",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u",
        "when": "editorTextFocus"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@types/vscode": "^1.103.0"
  },
  "publisher": "BeyondBedrock",
  "dependencies": {
    "pngjs": "^7.0.0"
  }
}